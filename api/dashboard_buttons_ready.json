{
  "essential_buttons": [
    {
      "id": "btn_start_api",
      "label": "Start API",
      "icon": "\u25b6\ufe0f",
      "color": "#00ff88",
      "endpoint": "/api/control/memory-api/start",
      "command": "source ~/anaconda3/bin/activate messiah && nohup python /mnt/Wolf-code/Wolf-Ai-Enterptises/api/memory_api.py > /tmp/memory_api.log 2>&1 & echo $!",
      "category": "control",
      "response_type": "text"
    },
    {
      "id": "btn_stop_api",
      "label": "Stop API",
      "icon": "\u23f9\ufe0f",
      "color": "#ff4444",
      "endpoint": "/api/control/memory-api/stop",
      "command": "pkill -f 'python.*memory_api.py' && echo 'Memory API stopped' || echo 'API not running'",
      "category": "control",
      "response_type": "text"
    },
    {
      "id": "btn_refresh_dashboard",
