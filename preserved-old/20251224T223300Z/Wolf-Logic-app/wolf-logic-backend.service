[Unit]
Description=Wolf Logic App Backend API
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/mnt/WolfPack/Wolf-Logic-app
ExecStart=/usr/bin/python3 /mnt/WolfPack/Wolf-Logic-app/backend.py
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
