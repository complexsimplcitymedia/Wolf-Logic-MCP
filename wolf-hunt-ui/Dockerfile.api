FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir flask flask-cors psycopg2-binary

# Copy application files
COPY api_server.py .
COPY resume_generator.py .
COPY job_boards/ ./job_boards/

# Expose API port
EXPOSE 5000

# Run API server
CMD ["python", "api_server.py"]
