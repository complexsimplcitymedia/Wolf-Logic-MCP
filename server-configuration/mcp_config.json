  },
  "oauth": {
    "provider": "authentik",
    "issuer_url": "https://auth.complexsimplicityai.com",
    "authorization_endpoint": "http://100.110.82.181:9080/application/o/authorize/",
    "token_endpoint": "http://100.110.82.181:9080/application/o/token/",
    "userinfo_endpoint": "http://100.110.82.181:9080/application/o/userinfo/",
